<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_contatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="Contatos"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_sub_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#7FA571"
        android:text="Estamos aqui pra ajudar vocês"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_contatos" />

    <TextView
    android:id="@+id/txt_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/poppins_medium"
    android:text="Horário de atendimento:"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/txt_sub_titulo" />

    <TextView
        android:id="@+id/txt_info_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Segunda a sexta, das 08h às 18h"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_info" />


    <LinearLayout
        android:id="@+id/container_contatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txt_email_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txt_email1_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coleta.certa@gmail.com"
                android:textSize="14sp"
                android:textColor="#00A1FF"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wpp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txt_wpp_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp: "
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txt_wpp1_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(85) 98541-2179"
                android:textSize="14sp"
                android:textColor="#00A1FF"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/insta_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_insta_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram: "
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/txt_insta1_contatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @coletacerta"
                android:textSize="14sp"
                android:textColor="#00A1FF"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>